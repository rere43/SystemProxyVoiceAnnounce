<Window x:Class="ProxyMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统代理监控" Height="500" Width="380" ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    <Window.Resources>
        <!-- ... (Resources omitted for brevity, keeping existing) ... -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#3E3E42" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#009DFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Name="TrackBackground" Height="4" Background="#3E3E42" CornerRadius="2" VerticalAlignment="Center" />
                            <Track Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="16" Height="16" Background="#007ACC" CornerRadius="8" BorderBrush="White" BorderThickness="1" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style for CheckBox -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <Border Grid.Column="1" Width="40" Height="20" CornerRadius="10" Background="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToColorConverter}}">
                                <Ellipse Width="16" Height="16" Fill="White" HorizontalAlignment="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToAlignmentConverter}}" Margin="2" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="监控设置" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- Content -->
        <StackPanel Grid.Row="1">
            <!-- Card 1: Content -->
            <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <Label Content="开启语音内容" Margin="0,0,0,5"/>
                    <TextBox Name="TxtContent" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                    
                    <Label Content="开启音频文件 (可选，WAV格式)" Margin="0,10,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Name="TxtAudioEnabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                        <Button Name="BtnSelectAudioEnabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioEnabled_Click" Width="60"/>
                    </Grid>
                    
                    <Label Content="关闭语音内容" Margin="0,15,0,5"/>
                    <TextBox Name="TxtContentDisabled" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                    
                    <Label Content="关闭音频文件 (可选，WAV格式)" Margin="0,10,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Name="TxtAudioDisabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                        <Button Name="BtnSelectAudioDisabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioDisabled_Click" Width="60"/>
                    </Grid>
                </StackPanel>
            </Border>


            <!-- Card 2: Voice Settings -->
            <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <Label Content="语音角色" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Name="CmbVoices" Grid.Column="0" Margin="0,0,10,0" VerticalContentAlignment="Center" DisplayMemberPath="DisplayName" SelectedValuePath="Id" />
                        <Button Name="BtnTest" Content="试听" Grid.Column="1" Click="BtnTest_Click" Width="60"/>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                        <Slider Name="SldVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ElementName=SldVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="语速" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                        <Slider Name="SldRate" Grid.Column="1" Minimum="-10" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ElementName=SldRate, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Card 3: System -->
            <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                <StackPanel>
                    <CheckBox Name="ChkStartup" Content="开机自动启动 (静默运行)" Style="{StaticResource ToggleSwitchStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button Name="BtnSave" Content="保存并隐藏运行" Height="45" FontSize="16" FontWeight="Bold" Click="BtnSave_Click" />
            <TextBlock Text="隐藏后请在任务管理器中结束 ProxyMonitor 进程以退出" TextWrapping="Wrap" Foreground="#666666" Margin="0,10,0,0" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
