<Window x:Class="ProxyMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统代理监控" Height="650" Width="400" ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Custom ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="GridRoot" Width="10" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="#3E3E42" BorderBrush="#1E1E1E" BorderThickness="1"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false"/>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false"/>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- Custom TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#3E3E42" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#3E3E42" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    <ToggleButton Grid.Column="1" Name="ToggleButton" Background="Transparent" BorderThickness="0" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press" Focusable="False">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" Width="20" Height="20" Margin="5,0">
                                                    <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#999999" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="5" MaxHeight="200">
                                    <ScrollViewer>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2D2D30" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Padding" Value="5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="ItemBorder" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#3E3E42" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#007ACC" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#009DFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Name="TrackBackground" Height="4" Background="#3E3E42" CornerRadius="2" VerticalAlignment="Center" />
                            <Track Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="16" Height="16" Background="#007ACC" CornerRadius="8" BorderBrush="White" BorderThickness="1" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style for CheckBox -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <Border Grid.Column="1" Width="40" Height="20" CornerRadius="10" Background="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToColorConverter}}">
                                <Ellipse Width="16" Height="16" Fill="White" HorizontalAlignment="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToAlignmentConverter}}" Margin="2" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Card 1: Content Settings -->
                <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <CheckBox Name="ChkUseAudioFile" Content="使用音频文件" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,0,15" Checked="ChkUseAudioFile_Checked" Unchecked="ChkUseAudioFile_Unchecked"/>
                        
                        <!-- TTS Mode Content (UseAudioFile=false时显示) -->
                        <StackPanel Name="PanelTtsContent" Visibility="Visible">
                            <Label Content="系统代理开启语音内容" Margin="0,0,0,5"/>
                            <TextBox Name="TxtContent" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                            
                            <Label Content="系统代理关闭语音内容" Margin="0,15,0,5"/>
                            <TextBox Name="TxtContentDisabled" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                            
                            <!-- TUN TTS Content (TUN监控启用时才显示) -->
                            <StackPanel Name="PanelTunTtsContent" Visibility="Collapsed">
                                <Label Content="TUN开启语音内容" Margin="0,15,0,5"/>
                                <TextBox Name="TxtTunEnabled" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                                
                                <Label Content="TUN关闭语音内容" Margin="0,15,0,5"/>
                                <TextBox Name="TxtTunDisabled" Height="35" FontSize="14" VerticalContentAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Audio Mode Content (UseAudioFile=true时显示) -->
                        <StackPanel Name="PanelAudioContent" Visibility="Collapsed">
                            <!-- 系统代理音频 -->
                            <Label Content="系统代理开启音频文件 (WAV格式)" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Name="TxtAudioEnabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                                <Button Name="BtnSelectAudioEnabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioEnabled_Click" Width="60"/>
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                                <Slider Name="SldAudioEnabledVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ElementName=SldAudioEnabledVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <Button Name="BtnTestAudioEnabled" Content="试听" Grid.Column="3" Click="BtnTestAudioEnabled_Click" Width="60" Margin="10,0,0,0"/>
                            </Grid>
                            
                            <Label Content="系统代理关闭音频文件 (WAV格式)" Margin="0,15,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Name="TxtAudioDisabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                                <Button Name="BtnSelectAudioDisabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioDisabled_Click" Width="60"/>
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                                <Slider Name="SldAudioDisabledVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ElementName=SldAudioDisabledVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <Button Name="BtnTestAudioDisabled" Content="试听" Grid.Column="3" Click="BtnTestAudioDisabled_Click" Width="60" Margin="10,0,0,0"/>
                            </Grid>
                            
                            <!-- TUN音频 (TUN监控启用时才显示) -->
                            <StackPanel Name="PanelTunAudioContent" Visibility="Collapsed">
                                <Label Content="TUN开启音频文件 (WAV格式)" Margin="0,15,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TxtAudioTunEnabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                                    <Button Name="BtnSelectAudioTunEnabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioTunEnabled_Click" Width="60"/>
                                </Grid>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                                    <Slider Name="SldAudioTunEnabledVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=SldAudioTunEnabledVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <Button Name="BtnTestAudioTunEnabled" Content="试听" Grid.Column="3" Click="BtnTestAudioTunEnabled_Click" Width="60" Margin="10,0,0,0"/>
                                </Grid>
                                
                                <Label Content="TUN关闭音频文件 (WAV格式)" Margin="0,15,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TxtAudioTunDisabled" Grid.Column="0" Height="30" FontSize="12" IsReadOnly="True" VerticalContentAlignment="Center" Margin="0,0,10,0" />
                                    <Button Name="BtnSelectAudioTunDisabled" Content="选择" Grid.Column="1" Click="BtnSelectAudioTunDisabled_Click" Width="60"/>
                                </Grid>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                                    <Slider Name="SldAudioTunDisabledVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=SldAudioTunDisabledVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <Button Name="BtnTestAudioTunDisabled" Content="试听" Grid.Column="3" Click="BtnTestAudioTunDisabled_Click" Width="60" Margin="10,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Card 2: Voice Settings -->
                <Border Name="BorderVoiceSettings" Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="语音角色" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox Name="CmbVoices" Grid.Column="0" Margin="0,0,10,0" VerticalContentAlignment="Center" DisplayMemberPath="DisplayName" SelectedValuePath="Id" />
                            <Button Name="BtnTest" Content="试听" Grid.Column="1" Click="BtnTest_Click" Width="60"/>
                        </Grid>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="音量" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                            <Slider Name="SldVolume" Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=SldVolume, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="语速" Grid.Column="0" Width="40" Padding="0" VerticalAlignment="Center"/>
                            <Slider Name="SldRate" Grid.Column="1" Minimum="-10" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ElementName=SldRate, Path=Value}" Grid.Column="2" Foreground="#999" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Card 3: System -->
                <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                    <StackPanel>
                        <CheckBox Name="ChkStartup" Content="开机自动启动 (静默运行)" Style="{StaticResource ToggleSwitchStyle}"/>
                        
                        <!-- TUN Mode Monitoring -->
                        <CheckBox Name="ChkEnableTunMonitoring" Content="启用TUN模式监控" Style="{StaticResource ToggleSwitchStyle}" Margin="0,15,0,0" Checked="ChkEnableTunMonitoring_Checked" Unchecked="ChkEnableTunMonitoring_Unchecked"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button Name="BtnSave" Content="保存并隐藏运行" Height="45" FontSize="16" FontWeight="Bold" Click="BtnSave_Click" />
            <TextBlock Text="隐藏后请在任务管理器中结束 ProxyMonitor 进程以退出" TextWrapping="Wrap" Foreground="#666666" Margin="0,10,0,0" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
